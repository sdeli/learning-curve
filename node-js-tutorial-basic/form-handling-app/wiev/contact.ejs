			<button class="my-form__submit" type="submit" value="submit">Submit</button>

		</form>
		
		<form id="form-ajax" class="my-form">
		<h2>Form Handled Via Ajax Without Submit</h2>
			
			<label class="my-form__label" for="who">your name</label>
			<input class="my-form__input-text" type="text" name="who" value="<%= qs.name %>">
		
			<label class="my-form__label" for="department">department</label>
			<input class="my-form__input-text" type="text" name="department" value="<%= qs.dept %>">

			<label class="my-form__label" for="email">email adress</label>
			<input class="my-form__input-text" type="text" name="email" value="<%= qs.email %>">

